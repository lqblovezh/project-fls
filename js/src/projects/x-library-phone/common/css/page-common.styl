  text-align center
.btn-login
  width 80%
  line-height 42px
  display inline-block
  // background $main-color
  border-radius 21px
  color #fff
  &.plain
    background #fff
    color $main-color
    border 1px solid $main-color
    box-sizing border-box
.btn_login_inp
  width 100px
  line-height 30px
  display inline-block
  border-radius 21px
  text-align center
  color #fff
  background #A6AAC1
  border-radius 0px 22.5px 22.5px 0px
.comp-adv-input
  display flex
  justify-content space-around
  >.text
    line-height 32px
    flex none
  >.select
    margin-right 20px
    width 30%
    flex auto
    >select
      background #F4F4F4
      border-radius 4px
      width 100%
      &:focus
        color #000
      >option
        color #000
        height 120px
  >.inp
    width 60%
    flex auto
    >input
      width 100%
      background #F4F4F4
  >.icon-tip
    width 40px
    text-align center
    line-height 32px
.btn-search-add
  border-radius 1em
  color #A6AAC1
  border 1px dashed #A6AAC1
  box-sizing border-box
  padding 0 60px
.item-checkbox
  position relative
  margin-right 14px
  input[type='checkbox']
    -webkit-appearance none
    vertical-align middle
    margin-top 0
    background #fff
    border #E8E8E8 solid 1px
    border-radius 50%
    height 15px
    width 15px
    &:focus
      outline none
  input[type='checkbox']:checked
    background-color #F15A4A
    border-color #F15A4A
  input[type=checkbox]:checked::after
    content ''
    position absolute
    top 5px
    left 8px
    height 7px
    width 4px
    border-right 2px solid #fff
    border-bottom 2px solid #fff
    transform rotate(45deg)
.manage
  position fixed
  bottom 0
  width 100%
  height 45px
  .footer-select
    height 100%
    flex 1
    align-items center
    >.item-checkbox
      margin-left 15px
  .footer-manage
    >button
      height 100%
      flex 1
  .footer-buy
    align-items center
    .footer-text
      flex 1
      p
        &:last-child
          margin-right 30px
        span
          letter-spacing -2px
          color #F15A4A
    >button
      height 100%
      flex 1
  .footer-manage, .footer-buy
    height 100%