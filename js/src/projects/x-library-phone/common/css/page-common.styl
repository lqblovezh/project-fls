@import './variable'

.after_item
  position relative
  &::after
    content ' '
    position absolute
    left 0
    right 0
    bottom 0
    height 4px
    background-image linear-gradient(90deg, #F6D27E 0%, #B1936A 100%)
    animation scale-choose 0.2s ease forwards
/* btns */
.bbtn
  line-height 2em
  text-align center
  padding 0 1em
  border-radius 1em
  display inline-block
.cbtn
  line-height 2.5em
  text-align center
  padding 0 1.5em
  border-radius 1.5em
  display inline-block
// color
.aac // 主色
  background-image linear-gradient(-108deg, #A6AAC1 0%, #D4D8ED 100%)
  color #fff
.b9a
  background-image linear-gradient(90deg, #F6D27E 0%, #B1936A 100%)
  box-shadow 0 3px 12px 2px rgba(132, 136, 153, 0.22)
  color #fff
.red
  color #fff
  background-image linear-gradient(-90deg, #F15A4A 0%, #F99381 100%)
  box-shadow 0 3px 12px 2px rgba(132, 136, 153, 0.22)
/*  */
.embtn
  line-height 2em
  display inline-block
  padding 0 1em
.item-column-list
  margin-left 0.3667rem
  margin-bottom 0.35rem
.form-login
  padding 20px
.btn-add-book
  width 100px
  height 35px
  border-radius 18px
  background #F15A4A
  text-align center
  color #fff
  line-height 35px
