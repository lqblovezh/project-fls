@import './variable'

.bg-all
  background #000
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index -10
.bd_line
  box-sizing border-box
  border-bottom 1px solid $border-color
.line-part
  height 0.2rem
  background #e5eef2
.line-single
  &::after
    content ' '
    position absolute
    left 0
    right 0
    background #ccc
    height 1px
    width calc(100% - 30px)
    margin 0 auto
.all-bg
  background #f5f5f5
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index -20
.taoxi-info-bg
  width 100%
  background url('../img/taoxi-bg.png') no-repeat center center
  background-size cover
.flex-between
  display flex
  justify-content space-between
.flex-between-center
  display flex
  justify-content space-between
  align-items center
.flex-ac
  display flex
  align-items center
.linear-btn
  background linear-gradient(to right, #F6D27E, #B1936A)
.btn-error
  background-color #F15A4A
.btn-reset
  margin 0
  padding 0
  border none
  outline none
.line
  height 4px
  background-color #F1F1F2
.icon-failed, .icon-success
  margin 0 auto
.border-title
	position relative
	padding-left 16px
	color #676A7B
  flex 1
	&:before
		position absolute
		content ''
		display inline-block
		left 0
		top 0
		height 100%
		width 4px
		border-radius 2px
		background linear-gradient(to right, #F6D27E, #B1936A)
.key-input
  margin-left 10px
  position relative
  input[type="radio"], input[type="checkbox"]
    position absolute
    top 0
    right 0
    width 14px
    height 14px
    opacity 0
    z-index 2
    &:checked + span
      position relative
      background-color #F15A4A
      border-color #F15A4A
      z-index 1
      &:after
        content ''
        position absolute
        display block
        width 8px
        height 4px
        left 1px
        top 2px
        border-left 2px solid #FFF
        border-bottom 2px solid #FFF
        transform rotate(-45deg)
    &:disabled + span
      width 8px
      height 8px
      padding 3px
      background-color #A6AAC1
      background-clip content-box
  >span
      width 13px
      height 13px
      border 1px solid #CCC
      border-radius 50%