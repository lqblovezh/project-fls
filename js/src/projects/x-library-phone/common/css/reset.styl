html, body
  margin 0
  padding 0
table
  border-collapse collapse
  border-spacing 0
a
  text-decoration none
a:link
  color #f30
a:visited
  color #000
a:hover
  color #123
a:active
  color #000
// table
.table
  border-spacing 2px
  font-size 15px
  width 100%
  tr
    td, th
      padding 24px 15px
      min-width 0
      box-sizing border-box
      text-overflow ellipsis
      vertical-align middle
      position relative
      text-align left
      line-height 20px
  >thead
    >tr
      border-bottom 1px solid #ebeef5
      background #f5f5f5
      >th
        color #333
  >tbody
    display table-row-group
    vertical-align middle
    border-color inherit
    font-weight 400
    >tr
      &:hover
        background #f5f5f5
      >td
        border-bottom 1px solid #ebeef5
        transition background-color 0.25s ease
        color #575757
        >.btns
          >span
            cursor pointer
// input 重置
input, textarea, select
  width 165px
  height 32px
  padding-left 10px
  transition color 0.1s ease
  border-radius 4px
  box-sizing border-box
  border solid 1px #eee
  resize none
  font-size 15px
  &:focus
    border solid 1px $main-color
  &.bd_e
    border solid 1px #e0e0e0
    &:focus
      border solid 1px $main-color