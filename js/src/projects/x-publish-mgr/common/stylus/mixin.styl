// 背景图片
bg-image($url)
  background-image: url('~common/image/'+ $url +'.png')
  background-repeat: no-repeat
  background-position: center
  background-size: contain

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:after
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px